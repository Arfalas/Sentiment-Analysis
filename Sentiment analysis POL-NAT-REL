def remove_punctuation(self):
    data1 = self.replace(',', '')
    data2 = data1.replace('.', '\n')
    data3 = data2.replace(':', '')
    data4 = data3.replace("'", '')
    data5 = data4.replace('?', '')
    data6 = data5.replace('!', '')
    data7 = data6.replace('"', '')
    data8 = data7.replace('-', '')

from string import digits

def remove_numbers(self):
    uploaded_string = self
    numberless_string = uploaded_string.translate(None, digits)



